<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stopListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/stop_line_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_size_large"
        android:layout_marginTop="@dimen/padding_size_xsmall">

        <View
            android:id="@+id/circle_ic"
            android:layout_width="@dimen/stop_circle_icon_width"
            android:layout_height="@dimen/stop_circle_icon_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle" />

        <View
            android:id="@+id/line_ic"
            android:layout_width="@dimen/stop_line_icon_width"
            android:layout_height="match_parent"
            android:layout_below="@+id/circle_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_bg" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/stopNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textSize="@dimen/padding_size_large"
            tools:text="Title" />

    </LinearLayout>
</LinearLayout>